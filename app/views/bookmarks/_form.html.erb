<%= form_for [topic, bookmark] do |f| %>
    <% if bookmark.errors.any? %>
      <div class="alert alert-danger">
        <h4>There are <%= pluralize(bookmark.errors.count, "error") %>.</h4>
        <ul>
          <% bookmark.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <%end %>
    <div class="form-group">
      <%= f.text_field :url, class: 'form-control', autofocus: true, placeholder: "Enter a url to save a new bookmark." %>
    </div>
    <div class="form-group">
      <%= f.submit "Save", class: 'btn btn-success' %>
    </div>
<% end %>