<h1>Topics</h1>

<div class="row">
  <div class="col-md-8">
    <% @topics.each do |topic| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <ul>
              <li><%= link_to topic.title, topic %></li>
            </ul>
          </h4>
        </div>
      </div>
    <% end %>
  </div>
</div>